<div id="fireshow"></div>
<script type="text/javascript">
    //установка параметров
    var SCREEN_WIDTH = 950,
        SCREEN_HEIGHT = 235,
        mousePos = { x: 400, y: 300 },

        // create canvas
        canvas,// = document.getElementById('canvasBanner'),
        context,// = canvas.getContext('2d'),
        particles = [],
