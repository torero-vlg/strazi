<button id="left">&laquo;</button>
<button id="right">&raquo;</button>

<button id="btnResult">Обновить</button>

<div class="block" style="position: absolute;background-color: #abc;left: 50px;width: 90px;height: 90px;margin: 5px;"></div>
 <div id="tmp"></div>
<script>
    $(document).ready(function () {


        //var properties = { "left": "+=50px" };  
        step();
    });

    // использование Math.round() даст неравномерное распределение!
    function getRandomInt(min, max) {
        return Math.floor(Math.random() * (max - min + 1)) + min;
    }


    function step() {
        var properties = null;

        var position = $(".block").position();

        var left = getRandomInt(0, $(window).width() - 50);
        var delta = left - position.left;
        if(delta > 0)
            properties = { "left": "+=" + Math.abs(delta) + "px" };
        else
            properties = { "left": "-=" + Math.abs(delta) + "px" };

        $(".block").animate(properties, "slow", null, step);
    }

    $("#btnResult").click(function () {
        $('#tmp').append('<br>window height ' + $(window).height());
        $('#tmp').append('window width ' + $(window).width());
        $('#tmp').append('document height ' + $(document).height());
        $('#tmp').append('document width ' + $(document).width());
    });

    $("#right").click(function () {
        $(".block").animate({ "left": "+=50px" }, "slow");
    });

    $("#left").click(function () {
        $(".block").animate({ "left": "-=50px" }, "slow");
    });
</script>